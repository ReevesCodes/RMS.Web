@model IEnumerable<RMS.Data.Entities.Order>

@{
    ViewData["Title"] = "Order History";
}

<h1>Order History</h1>

@if (!Model.Any())
{
    <p>You have no orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
